<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.hshannover.f4.ws1415</groupId>
		<artifactId>CoCoTAS</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<properties>
		<!-- platform or api level (api level 16 = platform 4.1) -->
		<android-platform>16</android-platform>
		<android-maven-plugin-version>3.8.2</android-maven-plugin-version>
	</properties>
	<groupId>de.hshannover.f4.ws1415.cocotas</groupId>
	<artifactId>CoCoTASControl</artifactId>
	<name>CoCoTAS-Control</name>
	<packaging>apk</packaging>

	<description>CoCoTASControl is an android app and part of the CoCoTAS system. It collects, filters and sends events generated by devices like smartphones to a central coordination server.</description>

	<contributors>
		<contributor>
			<name>Junichi Aoki</name>
		</contributor>
		<contributor>
			<name>Dmitrij Mizger</name>
		</contributor>
		<contributor>
			<name>Sebastian Sack</name>
		</contributor>
		<contributor>
			<name>Waldemar Zimmermann</name>
		</contributor>
		<contributor>
			<name>Rudolf Podlich</name>
		</contributor>
		<contributor>
			<name>Gabriel Winkler</name>
		</contributor>
		<contributor>
			<name>Marcel Reichenbach</name>
		</contributor>
	</contributors>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.jayway.maven.plugins.android.generation2</groupId>
					<artifactId>android-maven-plugin</artifactId>
					<version>${android-maven-plugin-version}</version>
					<extensions>true</extensions>
				</plugin>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											com.jayway.maven.plugins.android.generation2
										</groupId>
										<artifactId>
											android-maven-plugin
										</artifactId>
										<versionRange>
											[3.6.1,)
										</versionRange>
										<goals>
											<goal>proguard</goal>
											<goal>
												generate-sources
											</goal>
											<goal>consume-aar</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<configuration>
					<sdk>
						<platform>${android-platform}</platform>
					</sdk>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android-test</artifactId>
			<version>4.1.1.4</version>
		</dependency>

		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<version>4.1.1.4</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>com.android.support</groupId>
			<artifactId>appcompat-v7</artifactId>
			<version>18.0.0</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>com.android.support</groupId>
			<artifactId>appcompat-v7</artifactId>
			<version>18.0.0</version>
			<type>jar</type>
		</dependency>

	</dependencies>

</project>